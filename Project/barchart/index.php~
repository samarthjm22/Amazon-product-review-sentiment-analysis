<?php
$myfile = fopen("../../values.txt","r");
$values =  fread($myfile,10);
fclose($myfile);
$pos = $values[0];
$pos = 100*((float)$pos)/7;
$neg = 100 - $pos;
$confidence = $values[2].$values[3].$values[4].$values[5].$values[6].$values[7];
echo "Confidence".$confidence;
